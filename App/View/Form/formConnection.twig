<div class="">
    <div class="container">
        <div class="col s12">
            <ul class="tabs tabs-fixed-width grey darken-3 white-text login_tabs">
                <li class="tab">
                    <a href="#login" class="active">Connection</a>
                </li>
                <li class="tab">
                    <a href="#register">Inscription</a>
                </li>
            </ul>
        </div>

        <div id="login" class="row">
            
            
            <form id="login_form" class="col s12">
                <div class="col s10 offset-s1">             
                    <div class="col s12">
                        <div class="input-field inline">
                            <i class="fa fa-user-circle prefix" aria-hidden="true"></i>
                            <input id="email" type="email" name="email" class="validate" placeholder="" pattern="^[a-z0-9]+([_|\.|-]{1}[a-z0-9]+)*@[a-z0-9]+([_|\.|-]{1}[a-z0-9]+)*[\.]{1}[a-z]{2,6}$" />
                            <label for="email" data-error="Email invalide" data-success="Ok">Addresse Email</label>
                        </div>
                    </div>
                    <div class="col s12">
                        <div class="input-field col s12">
                            <i class="fa fa-shield prefix" aria-hidden="true"></i>
                            <input id="password" type="password" name="password" class="validate" placeholder="" minlength=6 />
                            <label for="password">Mot de Passe</label>
                        </div>
                    </div>
                </div>
                <div class="center col s12">
                    <button class="btn blue waves-effect">Connexion</button>
                </div>
                <div class="center login_message red white-text col s6 offset-s3 ">
                    <h6>Identifiants Incorrectes</h6>
                </div>
            </form>
        </div>
        

        <div id="register" class="col s12">
            TODO
        </div>

    </div>
</div>


