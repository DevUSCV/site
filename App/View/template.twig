<!-- Modal Structure -->
<div id="modal" class="modal">
    <div class="modal-content">
        <h4>Modal Header</h4>
        <div>

        </div>

    </div>
</div>
{#CONTACT MODAL#}
<div id="modal_contact" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>Nous Contacter</h4>
        <div>
            <div class="row">     
                <h5>Par Mail</h5>
                <form class="col s12" name="email_form">
                    <div class="input-field col s6">
                        <i class="fa fa-user-circle-o prefix" aria-hidden="true"></i>
                        <input id="mail_full_name" type="text" class="validate" value="{{ user.getFirstname }} {{ user.getLastname }}">
                        <label for="mail_full_name">Nom Complet</label>
                    </div>
                    <div class="input-field col s6">
                        <i class="fa fa-reply prefix" aria-hidden="true"></i>
                        <input id="mail_reply" type="email" class="validate" value="{{ user.getEmail }}">
                        <label for="mail_reply">Email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="mail_object" type="text" class="validate">
                        <label for="mail_object">Objet</label>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="fa fa-pencil prefix" aria-hidden="true"></i>
                                <textarea id="email_content" class="materialize-textarea"></textarea>
                                <label for="email_content">Message</label>
                            </div>
                        </div>
                    </div>
                </form>
                <h5>Par Courrier</h5>
                <span class="site_address col s12"></span>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-green btn green"><i class="fa fa-paper-plane" aria-hidden="true"></i> Envoyer</button>  
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>
{% block end_script %}{% endblock %}

</body>
</html>