{% extends "template.twig" %}

{% block head %}

    <link rel="stylesheet" href="/assets/css/profil.css">
    <script src="/assets/js/profil.js"></script>
    <title>Mon Profil</title>
{% endblock %}

{% block content %}
    <div class="row content">
        <div class="container">
            {% if user %}
                <h1>Mon Profil</h1>


                <div class="card"> 
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width black">
                            <li class="tab"><a class="active" href="#profil_tab">Moi</a></li>
                            <li class="tab"><a href="#license_tab">Mes Licenses</a></li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="profil_tab">
                            <span class="card-title">
                                test
                            </span>
                        </div>
                        <div id="license_tab">
                            MES LICENSES
                        </div>
                    </div>                                
                </div>


            {% else %}
                <h1>Veuillez vous connecter</h1>
                <script>
                    window.setTimeout(function () {
                        history.back();
                    }, 2000);
                </script>
            {% endif %}            
        </div>
    </div>

    <div class="row bottom_nav">
        <div class="col s12 black">
            <ul class="tabs black center">
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('club') }}">Le Club</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('activite') }}">Activit√©s</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('reservation') }}">Reservation</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('location') }}">Location</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block end_script %}
    <script>
        {% if user %}
            document.addEventListener("DOMContentLoaded", init("{{ user.getEmail }}"));
        {% endif %}
    </script>

{% endblock %}