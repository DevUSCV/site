{% extends "template.twig" %}

{% block head %}

    <link rel="stylesheet" href="/assets/css/download.css">
    <script src="/assets/js/download.js"></script>
    <title>Téléchargementsl</title>
{% endblock %}

{% block content %}
    <div class="row content">
        <div class="container">
            <h2>Téléchargements</h2>
            <div class="card">
                <div class="card-content">
                    <span class="card-title"></span>
                    <p></p>
                    {% if user.getStatus == "admin" %}
                        <div class="card-action">
                            <a class="btn-floating blue wave-effects" href="{{ path_for('ArticleEditor', {'article_name': 'download'}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                    {% endif %}
                    <br>                    
                    <table id="file_table" class="centered bordered">
                        <thead>
                            <tr class="grey darken-3 white-text">
                                <th>Nom</th>
                                <th colspan="2">Description</th>
                                <th>Télécharger</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    {% if user.getStatus == "admin" %}
                        <div class="card-action">
                            <a class="btn blue wave-effects" onclick="add_file()"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter un fichier</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row bottom_nav">
        <div class="col s12 black">
            <ul class="tabs black center">
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('club') }}">Le Club</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('activite') }}">Activités</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('reservation') }}">Reservation</a>
                </li>
                <li class="tab col s3">
                    <a target="_self" href="{{ path_for('location') }}">Location</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block end_script %}
{% endblock %}